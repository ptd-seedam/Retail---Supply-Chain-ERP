{
  "openapi": "3.0.0",
  "info": {
    "title": "Retail Supply Chain ERP API",
    "description": "Comprehensive REST API for Retail & Supply Chain ERP system with modular architecture",
    "version": "1.0.0",
    "contact": {
      "name": "Development Team",
      "email": "dev@erp.local"
    },
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Development Server"
    },
    {
      "url": "https://erp.example.com/api/v1",
      "description": "Production Server"
    }
